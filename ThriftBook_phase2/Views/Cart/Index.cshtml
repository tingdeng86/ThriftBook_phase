
@model IEnumerable<ThriftBook_phase2.ViewModels.CartVM>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (@ViewBag.TotalItems > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SessionId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookPhoto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SessionId)
                    </td>
                    <td asp-for="@item.BookId">
                        @Html.DisplayFor(modelItem => item.BookId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookPhoto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("-", "DecreaseOne", new { cartId = @item.CartItemId })
                        @Html.DisplayFor(modelItem => item.Quantity)/@Html.DisplayFor(modelItem => item.TotalQuantity)
                        @Html.ActionLink("+", "IncreaseOne", new { cartId = @item.CartItemId })
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { cartId = @item.CartItemId })|
                        @Html.ActionLink("Delete", "Delete", new { cartId = @item.CartItemId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total Items: @ViewBag.TotalItems </p>
    <p>Subtotal: $@ViewBag.SubTotal</p>
    <p>Tax: $@ViewBag.Tax</p>
    <p>Total: $@ViewBag.Total</p>
    <br />
    @Html.ActionLink("Continue Shopping", "Home")
    <br />
    @Html.ActionLink("Proceed to Checkout", "Checkout", new { totalPayment = ViewBag.Total })
    <br />
}
else
{
    <p>Cart is Empty.</p>
    @Html.ActionLink("Continue Shopping", "Home")
}

