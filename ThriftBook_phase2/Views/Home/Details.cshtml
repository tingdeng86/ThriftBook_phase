@model ThriftBook_phase2.ViewModels.BookVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Details for @Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookQuality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookQuality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookPhoto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.BookPhoto)" alt="Book-Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Rating
        </dd>
    </dl>
</div>
<div>
    @if (Model.BookQuantity > 0)
    {
        @Html.ActionLink("Add To Cart", "AddToCart", new { bookId = Model.BookID }, new { @class = "add-to-cartbtn btn btn-outline-dark" })
        <a asp-action="Index" class="add-to-cartbtn btn btn-outline-dark">Back to Home</a>
        @Html.ActionLink("View all Ratings", "GetAllBookRatings", new { bookId = Model.BookID }, new { @class = "add-to-cartbtn btn btn-outline-dark" })        
    }
    else
    {
        <p>Sold Out</p>
    }


</div>