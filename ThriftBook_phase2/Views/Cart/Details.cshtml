@model ThriftBook_phase2.ViewModels.CartVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Html.DisplayFor(model => model.Title)</h1>

<div>   
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="display: none;">
            @Html.DisplayNameFor(model => model.BookId)
        </dt>
        <dd class="col-sm-10" style="display: none;">
            @Html.DisplayFor(model => model.BookId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Book Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.BookPhoto)" alt="Book-Image" id="detailbook" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index">Go to Cart </a>
    <br/>
    @Html.ActionLink("Continue Shopping", "Home")
</div>


