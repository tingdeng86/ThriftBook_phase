@model ThriftBook_phase2.ViewModels.BookVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Details for @Html.DisplayFor(model => model.Title) -  @Html.ActionLink("View all Ratings", "GetAllBookRatings", new { bookId = Model.BookID })</h4>
    <hr />
    <dl class="row">       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookQuality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookQuality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookPhoto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.BookPhoto)" alt="Book-Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Rating
        </dd>
    </dl>
</div>
<div>
    @if (Model.BookQuantity > 0)
    {
    <div class="add-to-cartbtn">
        @Html.ActionLink("Add To Cart", "AddToCart", new { bookId = Model.BookID }, null)
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>       
    </div>
    <div class="add-to-cartbtn">
        <a asp-action="Index">Back to Home</a>
    </div>
    } else
    {
        <p>Sold Out</p>
    }
    
    
</div>